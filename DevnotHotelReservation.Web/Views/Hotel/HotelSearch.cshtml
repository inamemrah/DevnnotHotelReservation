@using DevnotHotelReservation.Entity.ViewModel
@model List<HotelSearchModel>
@{
    ViewData["Title"] = "HotelSearch";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<div class="alert alert-secondary" role="alert">
    <center>
        <h1>Hotel Arama Sonuçları</h1>
    </center>
</div>
<div class="container">
    @foreach (var hotel in Model)
    {
        <div class="row">
            <div class="col-md-10">
                <div class="alert alert-warning" role="alert">
                    <div class="alert alert-secondary" role="alert">
                        <h5>Otel Adı</h5>
                        @hotel.Hotel.Name
                    </div>
                    <div class="alert alert-secondary" role="alert">
                        <h5>Otel Adresi</h5>
                        @hotel.HotelAddress.AddressText
                    </div>
                    <div class="alert alert-secondary" role="alert">
                        <h5>Oda Bilgisi</h5>
                        @hotel.HotelRoom.RoomSummary
                    </div>

                    <div class="alert alert-secondary" role="alert">
                        <h5>Oda Detayları</h5>
                        @hotel.HotelRoom.RoomDetail
                    </div>

                    @Html.ActionLink("Otele Git", "HotelDetails", "Hotel", new { id = hotel.Hotel.Id },
                    new { @class = "btn btn-info btn-lg btn-block" })
                </div>
            </div>
        </div>
    }
</div>
